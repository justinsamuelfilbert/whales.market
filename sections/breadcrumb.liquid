{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding {{ section.settings.alignment_breadcrumb }}">
{% render 'breadcrumb' %}
</div>
{% schema %}
{
  "name": "t:sections.breadcrumb.name",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.general.name"
    },
    {
      "type": "select",
      "id": "alignment_breadcrumb",
      "label": "t:sections.breadcrumb.settings.alignment.name.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.breadcrumb.settings.alignment.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.breadcrumb.settings.alignment.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.breadcrumb.settings.alignment.right.label"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.breadcrumb.name",
      "category": "Text"
    }
  ]
}
{% endschema %}
